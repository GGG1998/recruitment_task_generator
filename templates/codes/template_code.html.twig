<div class="table-responsive">
    {% if codes %}
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>#</th>
            <th>Kod</th>
            <th>Data utworzenia</th>
        </tr>
        </thead>
        <tbody>
        {% for code in codes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ code.value }}</td>
                <td>{{ code.datecreate|date("m/d/Y H:i:s") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <h3>BRAK KODÃ“W</h3>
    {% endif %}
</div>